<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@drawable/background_apq"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:contentDescription="@string/header_nar_quanlybanhang"
        android:id="@+id/em_anhdaidien"
        android:layout_width="90dp"
        android:layout_height="90dp" />
    <LinearLayout
        android:backgroundTintMode="screen"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tenCH"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/header_nar_quanlybanhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="13sp"
            android:textStyle="bold"
            android:id="@+id/tv_emailCH"
            android:textColor="@color/black"
            android:text="@string/emai_qlbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>